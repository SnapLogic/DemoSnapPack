<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>${VERSION}-${sl_build}</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${basedir}/src/main/config</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>${file.separator}MANIFEST${file.separator}</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/${project.artifactId}-build</directory>
            <includes>
                <include>*-snap-${VERSION}-${sl_build}.zip</include>
            </includes>
            <outputDirectory>${file.separator}java</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/schema</directory>
            <includes>
                <include>com-*.schema</include>
            </includes>
            <outputDirectory>${file.separator}schema</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/schema/account</directory>
            <includes>
                <include>com-*.schema</include>
            </includes>
            <outputDirectory>${file.separator}schema${file.separator}account</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>